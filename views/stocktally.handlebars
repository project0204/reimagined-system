<section class="relative overflow-x-auto shadow-md sm:rounded-lg">
	<table style="width:100%" class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
	<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
            <th scope="col" class="px-6 py-3 text-gray-900 dark:text-white whitespace-nowrap">Ingredients</th>
            <th scope="col" class="px-6 py-3 text-gray-900 dark:text-white whitespace-nowrap"> Stock</th>   
            <th scope="col" class="px-6 py-3 text-gray-900 dark:text-white whitespace-nowrap">Usage per Pizza</th>
        </tr>
    </thead>
	{{#each ingredients as |ingredient|}}
	<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700  hover:text-green-500 transition duration-300 font-semibold">
		{{> Stocktally2 ingredient}}
	</tr>
	{{/each}}
	</table>

</section>
<section class="relative flex flex-col justify-center min-h-screen overflow-hidden">
	<h1>Add to Stock</h1>
	<form class="w-full max-w-sm " id="addStock">
		<div class="flex items-center border-b border-teal-500 py-2">
			<input
				id="ingrediantInput"
				class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
				type="text"
				placeholder="Name of Ingrediant"
				aria-label="Ingrediant name"
			/>
		</div>
			<div class="flex items-center border-b border-teal-500 py-2">
			<input
				id="perPizzaInput"
				class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
				type="text"
				placeholder="Amount used per pizza"
				aria-label="per pizza input"
			/>
		</div>
		<div class="flex items-center border-b border-teal-500 py-2">
			<input
				id="stockInput"
				class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
				type="text"
				placeholder="Number in Stock"
				aria-label="Stock number"
			/>
			<button
				class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded"
				type="submit"
			>
				Submit
			</button>

		</div>
	</form>

</section>

