<section class="grid place-items-center">
	<table style="width:80%" class="align: center, border:1px solid black">
	<thead>
        <tr>
            <th>Ingredients</th>
            <th>Image</th>
            <th>Stock</th>   
            <th>Usage per Pizza</th>
        </tr>
    </thead>
	<tr>
		{{> Stocktally2 ingredients}}
	</tr>
	</table>

</section>
<section>
	<h1 class="display:flex justify-content:center">Add to Stock</h1>
	<form class="w-full max-w-sm " id="addStock">
		<div class="flex items-center border-b border-teal-500 py-2">
			<input
				id="ingrediantInput"
				class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
				type="text"
				placeholder="Name of Ingrediant"
				aria-label="Ingrediant name"
			/>
		</div>
		<div class="flex items-center border-b border-teal-500 py-2">
			<input
				id="stockInput"
				class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
				type="text"
				placeholder="Number in Stock"
				aria-label="Stock number"
			/>
			<button
				class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded"
				type="submit"
			>
				Submit
			</button>

		</div>
	</form>

</section>

