<div class="relative flex flex-col justify-center min-h-screen overflow-hidden">
	<div
		class="w-full p-6 m-auto bg-white border-t-4 border-blue-400 rounded-md shadow-md border-top lg:max-w-md"
	>
		<h1
			class="text-3xl font-semibold text-center text-blue-400"
		>Reimagine-system</h1>
		<form class="login-form">
			<div class="mt-6">
				<label
					for="email-login"
					class="block text-sm text-gray-800"
				>Email</label>
				<input
					type="text"
					id="email-login"
					class="block w-full px-4 py-2 mt-2 text-purple-700 bg-white border rounded-md focus:border-blue-400 focus:ring-purple-300 focus:outline-none focus:ring focus:ring-opacity-40"
				/>
			</div>
			<div class="mt-4">
				<label
					for="password-login"
					class="block text-sm text-gray-800"
				>Password</label>
				<input
					type="password"
					id="password-login"
					class="block w-full px-4 py-2 mt-2 text-purple-700 bg-white border rounded-md focus:border-blue-400 focus:ring-purple-300 focus:outline-none focus:ring focus:ring-opacity-40"
				/>
			</div>
			<div class="mt-6">
				<button
					type="submit"
					class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-400 rounded-md hover:bg-red-800 focus:outline-none focus:bg-purple-600"
				>Login</button>
			</div>
		</form>
		<p class="mt-8 text-xs font-light text-center text-gray-700">
			Don't have an account?
			<a
				href="/signup"
				class="font-medium text-blue-400 hover:underline"
			>Signup</a></p>
	</div>
</div>

<script src="/javascript/login.js"></script>